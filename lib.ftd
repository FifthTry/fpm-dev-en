-- ftd.column template:
caption title:
string image:
optional string link: /
boolean active:
string cta-text:
width: 400
height: 225
width if $fpm.mobile: fill
spacing: 15
background-image: $image
border-radius: 4
border-width: 1
border-color: $fpm.design.color.brand.on-region
margin-bottom: 50

--- ftd.text: $title
role: $fpm.design.type.title-large
anchor: parent
top: 5
left: 0
background-color: $fpm.design.color.brand.region
padding-horizontal: 20
padding-vertical: 5
min-width: 200
color: $fpm.design.color.brand.on-region

--- ftd.text: $cta-text
if: $active
role: $fpm.design.type.label-large
text-align: center
link: $link
anchor: parent
bottom: 30
right: 40
color: $fpm.design.color.brand.on-region
background-color: $fpm.design.color.brand.region
border-radius: 20
padding-vertical: 5
padding-horizontal: 20

--- container: ftd.main

--- ftd.text: $cta-text
if: not $active
text-align: center
anchor: parent
bottom: 30
right: 40
color: $fpm.design.color.brand.on-region
background-color: $fpm.design.color.brand.region
border-radius: 20
padding-vertical: 5
padding-horizontal: 20
role: $fpm.design.type.label-large










-- ftd.column theme:
caption title:
string image:
optional string link: /
optional string live_preview:
width: 400
height: 225
width if $fpm.mobile: fill
spacing: 15
background-image: $image
border-radius: 4
border-width: 1
