-- ftd.column template:
caption title:
ftd.image-src image:
optional string link: /
boolean active:
string cta-text:
width: 400
height: 225
width if $ft.is-mobile: fill
spacing: 15
background-image: $image
border-radius: 4
border-width: 1
border-color: $fpm.color.main.text
margin-bottom: 50

--- ftd.text: $title
role: $fpm.type.heading-large
anchor: parent
top: 5
left: 0
background-color: $fpm.color.main.background.base
padding-horizontal: 20
padding-vertical: 5
min-width: 200
color: $fpm.color.main.text

--- ftd.text: $cta-text
if: $active
role: $fpm.type.label-big
text-align: center
link: $link
anchor: parent
bottom: 30
right: 40
color: $fpm.color.main.text
background-color: $fpm.color.main.background.base
border-radius: 20
padding-vertical: 5
padding-horizontal: 20

--- container: ftd.main

--- ftd.text: $cta-text
if: not $active
text-align: center
anchor: parent
bottom: 30
right: 40
color: $fpm.color.main.text
background-color: $fpm.color.main.background.base
border-radius: 20
padding-vertical: 5
padding-horizontal: 20
role: $fpm.type.label-big










-- ftd.column theme:
caption title:
ftd.image-src image:
optional string link: /
optional string live_preview:
width: 400
height: 225
width if $ft.is-mobile: fill
spacing: 15
background-image: $image
border-radius: 4
border-width: 1
border-color: $fpm.color.main.text
margin-bottom: 50

--- ftd.text: $title
anchor: parent
top: 5
left: 0
background-color: $fpm.color.main.background.base
padding-horizontal: 20
padding-vertical: 5
min-width: 200
color: $fpm.color.main.text
role: $fpm.type.heading-large

--- ftd.row:
anchor: parent
bottom: 30
right: 40
id: link-row

--- container: link-row

--- ftd.text: Live Preview
if: $live_preview is not null
text-align: center
link: $live_preview
color: $fpm.color.main.text
background-color: $fpm.color.main.background.base
border-radius: 20
padding-vertical: 5
padding-horizontal: 20
margin-right: 5
role: $fpm.type.label-big

--- ftd.text: Create
text-align: center
link: $link
color: $fpm.color.main.text
background-color: $fpm.color.main.background.base
border-radius: 20
padding-vertical: 5
padding-horizontal: 20
role: $fpm.type.label-big










-- ftd.row bread-crumb:
padding-vertical: 20
open: true
append-at: main-container

--- ftd.row:
spacing: 20
id: main-container










-- ftd.row crumb:
spacing: 20
caption title:
optional string link:

--- ftd.text: $title
if: $link is not null
link: $link
color: $fpm.color.main.text
role: $fpm.type.label-big

--- ftd.image:
if: $link is not null
src: $assets.files.static.images.arrow.svg
width: 16

--- container: ftd.main

--- ftd.text: $title
if: $link is null
color: $fpm.color.main.text
role: $fpm.type.label-small

