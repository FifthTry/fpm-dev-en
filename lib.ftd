--- ftd.row:
spacing: 20
id: main-container










-- ftd.row crumb:
spacing: 20
caption title:
optional string link:

--- ftd.text: $title
if: $link is not null
link: $link
color: $fpm.design.color.brand.on-region
role: $fpm.design.type.label-large

--- ftd.image:
if: $link is not null
src: $assets.files.static.images.arrow.svg
width: 16

--- container: ftd.main

--- ftd.text: $title
if: $link is null
color: $fpm.design.color.brand.on-region
role: $fpm.design.type.label-medium

