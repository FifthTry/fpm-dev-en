-- import: ft
-- import: fpm.dev/assets
-- import: fifthtry.github.io/bling/assets as b-assets
-- import: fifthtry.github.io/bling/chat


-- chat.message-right amitu: $title
caption or body title:
avatar: $b-assets.files.amitu.jpg
round-avatar: true

-- chat.message-left ganesh: $title
caption or body title:
avatar: $b-assets.files.ganeshs.jpeg
round-avatar: true


-- ftd.column create-section:
width: fill
open: true
append-at: content-container
padding-vertical: 30

--- ftd.column:
if: not $ft.is-mobile
max-width: 1000
width: fill
align: center
id:  content-container

--- container: ftd.main

--- ftd.column:
if: $ft.is-mobile
width: fill
align: center
padding-horizontal if $ft.is-mobile: 20
id:  content-container



-- ftd.column hero:
caption title:
ftd.image-src image:
open: true
append-at: main-container

--- hero-desktop: $title
if: not $ft.is-mobile
id: main-container
image: $image

--- container: ftd.main

--- hero-mobile: $title
if: $ft.is-mobile
id: main-container
image: $image







-- ftd.column hero-desktop:
caption title:
ftd.image-src image:
width: fill
background-color: $fpm.color.main.background.base
padding-horizontal: $ft.content-padding
padding-vertical: 50
spacing: 40
open: true
append-at: desktop-action-container

--- ftd.row:
width: fill

--- ftd.text: $title
color: $fpm.color.main.text
width: percent 75
position: center
role: $fpm.type.heading-large

--- ftd.image:
src: $image
width: percent 15
height: auto
position: right

--- container: ftd.main

--- ftd.row:
id: desktop-action-container
spacing: 40






-- ftd.column hero-mobile:
caption title:
ftd.image-src image:
optional string id:
id: $id
width: fill
background-color: $fpm.color.main.background.base
padding-horizontal: 20
padding-vertical: 50
spacing: 30
open: true
append-at: mobile-action-container

--- ftd.image:
src: $image
width: percent 50
height: auto
position: center

--- ftd.text: $title
color: $fpm.color.main.text
padding-horizontal: 20
position: center
text-align: center
role: $fpm.type.heading-large

--- container: ftd.main

--- ftd.column:
id: mobile-action-container
position: center
padding-top: 10
spacing: 30





-- ftd.text action-button:
caption title:
string url:
optional ftd.color color: $fpm.color.main.text
optional ftd.color background-color: $fpm.color.main.background.base
text: $title
link: $url
background-color: $background-color
color: $color
border-radius: 6
padding-vertical: 15
padding-horizontal: 40
role: $fpm.type.label-big




-- ftd.text banner:
caption title:
text: $title
padding: 45
text-align: center
color: $fpm.color.main.text
background-color: $fpm.color.main.background.base
width: fill
role: $fpm.type.heading-large



