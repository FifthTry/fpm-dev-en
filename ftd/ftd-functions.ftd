spacing.fixed.px: 10

\-- ftd.integer: $x

\-- ftd.text: Click to increment by 1
$on-click$: $ftd.increment($a = $x) ;; <hl>

\-- end: ftd.column

-- ds.rendered.output:

-- increment-sample:

-- end: ds.rendered.output

-- end: ds.rendered











