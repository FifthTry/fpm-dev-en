-- ft-ui.template: Dialog - 1
template-url: featured/sections/modals/dialog-1/
screenshot: $fastn-assets.files.images.featured.components.dialog-2.png

-- ft-ui.template: Modal Cover
template-url: featured/sections/modals/modal-2/
