-- template list doc-sites:

-- doc-sites: Doc-site
template-url: http://fifthtry.github.io/doc-site/
screenshot: $assets.files.static.doc-site.png
licence-url: https://github.com/FifthTry/doc-site/blob/main/LICENSE
